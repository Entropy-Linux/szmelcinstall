{
  "root_home": {
    "include": [
      "*"
    ],
    "exclude": [
      ".local/share/zinit/**",
      ".local/share/Trash/**",
      ".local/share/recently-used*",
      ".local/share/gvfs-metadata/**",
      ".zcompdump*",
      ".dbus/**",
      ".Xauthority",
      ".ICEauthority",
      "/run/**",
      "/tmp/**",
      "/etc/machine-id",
      "/var/lib/dbus/machine-id",
      "/var/lib/systemd/random-seed",
      "/var/lib/NetworkManager/**",
      "/var/lib/pacman/local/**"
    ]
  },
  "user_home": {
    "include": [
      "*"
    ],
    "exclude": [
      ".local/share/zinit/**",
      ".local/share/Trash/**",
      ".local/share/recently-used*",
      ".local/share/gvfs-metadata/**",
      ".zcompdump*",
      ".dbus/**",
      ".Xauthority",
      ".ICEauthority",
      "/run/**",
      "/tmp/**",
      "/etc/machine-id",
      "/var/lib/dbus/machine-id",
      "/var/lib/systemd/random-seed",
      "/var/lib/NetworkManager/**",
      "/var/lib/pacman/local/**"
    ]
  },
  "extra_paths": [
    {
      "source": "/etc/skel",
      "destination": "/etc/skel"
    }
  ]
}
