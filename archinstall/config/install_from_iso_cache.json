{
  "root_home": {
    "include": [
      ".zshrc",
      ".bashrc",
      ".profile",
      ".zprofile",
      ".zshenv",
      ".config/**",
      ".local/bin/**",
      ".local/share/applications/**",
      ".local/share/fonts/**",
      ".local/share/icons/**",
      ".local/share/themes/**",
      ".themes/**",
      ".icons/**",
      ".face",
      ".cache/**",
      ".config/pulse/**",
      ".config/chromium/**",
      ".config/google-chrome/**",
      ".config/BraveSoftware/**",
      ".mozilla/**",
      ".pki/**",
      ".local/share/flatpak/**",
      ".local/share/containers/**",
      ".local/share/keyrings/**"
    ],
    "exclude": [
      ".local/share/zinit/**",
      ".local/share/Trash/**",
      ".local/share/recently-used*",
      ".local/share/gvfs-metadata/**",
      ".zcompdump*",
      ".dbus/**",
      ".Xauthority",
      ".ICEauthority",
      "/run/**",
      "/tmp/**",
      "/etc/machine-id",
      "/var/lib/dbus/machine-id",
      "/var/lib/systemd/random-seed",
      "/var/lib/NetworkManager/**",
      "/var/lib/pacman/local/**"
    ]
  },
  "user_home": {
    "include": [
      ".zshrc",
      ".bashrc",
      ".profile",
