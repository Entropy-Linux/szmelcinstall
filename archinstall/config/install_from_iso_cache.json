    ],
    "exclude": [
      ".local/share/zinit/**",
      ".local/share/Trash/**",
      ".local/share/recently-used*",
      ".local/share/gvfs-metadata/**",
      ".zcompdump*",
      ".dbus/**",
      ".Xauthority",
      ".ICEauthority",
